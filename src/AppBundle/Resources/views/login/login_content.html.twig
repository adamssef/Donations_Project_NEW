{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container text-center ">
    <div class="row box-me" style="background-color: #1a8861; border-radius: 25px; font-size: large; margin-bottom:
    50px"><div
                class="col-sm-12">Zaloguj
            się</div></div>
</div>

<div class="container md-5">
    <div class="col-md-100">
        <form action="{{ path("fos_user_security_check") }}" method="post">

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <div class="form-group">
                <div class="row"><label class="h4" for="username">Nazwa użytkownika</label></div>
                <div class="row"><input type="text" id="username" name="_username" value="{{ last_username }}"
                                        required="required"
                                        autocomplete="username"/></div>
            </div>
            <div class="form-group">
                <div class="row"><label class="h4" for="password">Hasło</label></div>
                <div class="row"><input type="password" id="password" name="_password" required="required"
                                        autocomplete="current-password"
                                        value=""/></div>
            </div>
            <div class="form-group">
                <div class="row"><input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label class="h4"
                           for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
            </div>
            <div class="form-group">
                <div class="row"><input type="submit" id="_submit" name="_submit"
                                        value="{{ 'security.login.submit'|trans }}"/></div>
            </div>
        </form>
    </div>
</div>
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") == false %}
    <div class="container mt-5">
        <div class="col-md-100">
            <h5>Nie masz jeszcze konta?</h5>
            <ul>
                <li class="highlighted"><a href="{{ path('fos_user_registration_register') }}"><h5>Zarejestruj się!</h5>
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endif %}
